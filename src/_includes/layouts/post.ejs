---
layout: layouts/base.ejs
---

<article class="post">
  <header>
    <h1 class="font-bold text-3xl"><%= title %></h1>
    <% if (!!locals.subtitle ) { %>
      <h2><%= subtitle %></h2>
    <% } %>
    <div class="author">
      <%= site.author %><br>
      <%= this.dateFns.format(new Date(date), 'LLLL d, yyyy') %>
    </div>
  </header>
  <section>
    <%- content %>
  </section>
  <hr>
  <footer>
    <a href="/">Back to home</a>
  </footer>
</article>
