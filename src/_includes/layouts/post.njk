---
layout: layouts/base.njk
---

<article class="post">
  <header>
    <h1 class="font-bold text-3xl">{{ title }}</h1>
    {% if subtitle %}
      <h2>{{ subtitle }}</h2>
    {% endif %}
    
    <div class="author">
      {{ site.author }}<br/>
      {{ date|date }}
    </div>
  </header>
  <section>
    {{ content | safe }}
  </section>
  <hr>
  <footer>
    <a href="/">Back to home</a>
  </footer>
</article>
